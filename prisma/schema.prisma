datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  tasks    Task[]
}

model Task {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  dueDate       DateTime
  status        TaskStatus @default(PENDING)
  assignedTo    User?      @relation(fields: [userId], references: [id])
  userId        Int?
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
